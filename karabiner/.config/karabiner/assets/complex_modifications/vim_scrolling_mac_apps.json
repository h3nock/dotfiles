{
  "title": "Vim Scrolling for Mac Apps",
  "rules": [
    {
      "description": "Ctrl+J/K to Scroll (Mouse Wheel)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
            "to": [
            {
              "mouse_key": {
                "vertical_wheel": -64
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.openai\\.chat$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": 64
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.openai\\.chat$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
